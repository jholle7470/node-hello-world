<!-- views/notes.ejs -->

<h2 class="mb-4 text-center">All Notes</h2>

<form action="/notes" method="POST" class="mb-5">
  <div class="row mb-3">
    <label for="title" class="col-sm-2 col-form-label">Title</label>
    <div class="col-sm-10">
      <input  style="width: 100%; min-width: 600px"
        type="text"
        class="form-control"
        id="title"
        name="title"
        placeholder="Note title"
        required
      />
    </div>
  </div>

  <div class="row mb-3">
    <label for="content" class="col-sm-2 col-form-label">Content</label>
    <div class="col-sm-10">
      <textarea input style="width: 100%; min-width: 600px"
        class="form-control"
        id="content"
        name="content"
        rows="8"
        placeholder="Your noteâ€¦"
        required
      ></textarea>
    </div>
  </div>

  <button type="submit" class="btn btn-primary w-100">Add Note</button>
</form>

<% if (notes.length === 0) { %>
  <p class="text-center text-muted">No notes yet. Add one above!</p>
<% } else { %>
  <div class="w-100">
    <% notes.forEach(note => { %>
      <div class="note-card">
        <h5><%= note.title %></h5>
        <p><%= note.content %></p>
        <small class="text-muted"><%= note.createdAt.toLocaleString() %></small>
      </div>
    <% }) %>
  </div>
<% } %>
